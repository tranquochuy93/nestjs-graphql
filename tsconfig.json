{
  "compilerOptions": {
      "lib": ["ES2020", "ESNext"],
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      // "resolveJsonModule": true,
      "paths": {
          "~*": ["src/*"]
      },
      "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "ts-node": {
      "files": true
  }
}
